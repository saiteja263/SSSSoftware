@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-auto">
        <div class="col-md-3">
            <div class="accordion-item">
                <img src="/css/HomeImage.png" class="align-self-sm-start" alt="Team" height="500" width="1300">
                
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-4">
                <div class="card">
                    <img src="/css/services.png" class="card-img-top" alt="Service 1" height="130" width="115">
                    <div class="card-body">
                        <h5 class="card-title">Our Services</h5>
                        <p class="card-text">We offer a variety of services to help grow your business.</p>
                        <a href="#" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
            <br />
            <div class="col-md-4">
                <div class="card">
                    <img src="/css/ourteam.png" class="card-img-top" alt="Team" height="130" width="115">
                    <div class="card-body">
                        <h5 class="card-title">Our Team</h5>
                        <p class="card-text">Meet our dedicated team of professionals.</p>
                        <a href="#" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
            <br />
            <div class="col-md-4">
                <div class="card">
                    <img src="/css/ContactUs.png" class="card-img-top" alt="Contact" height="130" width="115">
                    <div class="card-body">
                        <h5 class="card-title">Contact Us</h5>
                        <p class="card-text">Get in touch with us for more information.</p>
                        <a href="#" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
</body>
</html>